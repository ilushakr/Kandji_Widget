<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_config">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Choose your JLPT level!"
        android:textSize="30dp"
        android:textColor="@color/ColorBlack"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/level_N5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N5"
            android:textSize="20dp"
            android:checked="true"/>


        <RadioButton
            android:id="@+id/level_N4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N4"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/level_N3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N3"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/level_N2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N2"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/level_N1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N1 part 1"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/level_N1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N1 part 2"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/level_N1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N1 part 3"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/level_N1_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N1 part 4"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/level_N1_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:buttonTint="@color/ColorBlack"
            android:text="N1 part 5"
            android:textSize="20dp"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/frame_for_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add widget!"
            android:textSize="30dp"
            android:textColor="@color/ColorBlack"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"/>

    </RelativeLayout>

</LinearLayout>